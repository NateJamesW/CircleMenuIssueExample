<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="studio.victorylapp.fragments.MainFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.imangazaliev.circlemenu.CircleMenu
                android:id="@+id/circleMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                app:hintsEnabled="true">

                <com.imangazaliev.circlemenu.CircleMenuButton
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:colorNormal="#443266"
                    app:colorPressed="#C3C3E5"
                    app:hintText="Choose Notification"
                    app:icon="@drawable/round_notifications_white_24" />

                <com.imangazaliev.circlemenu.CircleMenuButton
                    android:id="@+id/power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:colorNormal="#443266"
                    app:colorPressed="#C3C3E5"
                    app:hintText="Toggle On or Off"
                    app:icon="@drawable/round_power_settings_new_white_24" />

                <com.imangazaliev.circlemenu.CircleMenuButton
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:colorNormal="#443266"
                    app:colorPressed="#C3C3E5"
                    app:hintText="Notification Settings"
                    app:icon="@drawable/round_settings_white_24" />/>

            </com.imangazaliev.circlemenu.CircleMenu>


    </android.support.constraint.ConstraintLayout>

</FrameLayout>
